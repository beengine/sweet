.main
  .btn-group.logout
    .btn.btn-default
      = current_user.email 
    = link_to edit_user_registration_path, class: 'btn btn-secondary' do
      %i.fa.fa-pencil
    = link_to destroy_user_session_path, method: :delete, class: 'btn btn-default' do
      %i.fa.fa-sign-out
  .card.card-body#newpr
    = form_for(@project, remote: true, html: {class: 'input-group'}) do |f|
      = f.text_field :name, class: 'form-control', placeholder: 'Add project...', required: true, autocomplete: 'off'
      %span.input-group-btn
        = f.submit class: 'btn btn-secondary'

  = render @projects
