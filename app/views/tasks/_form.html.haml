= form_for(@task, remote: true, html: {class: 'form-inline'}) do |f|
  = f.hidden_field :project_id, value: @task.project_id
  = f.text_field :name, class: 'form-control task-edit', required: true
  = f.select(:priority, [['Low', 1], ['Normal', 2],['High', 3]],{},{ class: "form-control", prompt: "Priority"})
  = f.text_field :deadline, class: 'form-control date', placeholder: 'Deadline...', size: 10
  = f.submit class: 'btn btn-default'