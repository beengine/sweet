.dvs
  .card
    .card-header
      %h4 Sign up

    .card-body
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .col-form-label
          = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'e-mail'
        .col-form-label
          - if @minimum_password_length
            = @minimum_password_length
            %em characters minimum
          = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password'
        .col-form-label
          = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password confirmation'
        = f.submit "Sign up", class: 'btn btn-secondary'

      = render "devise/shared/links"


