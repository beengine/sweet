.dvs
  .card
    .card-header
      .float-right
        %a{href: 'https://github.com/beengine/whiteTODOlist'}
          %img{src: "https://cdnjs.cloudflare.com/ajax/libs/open-iconic/1.1.1/svg/code.svg", height: '16px', width: '16px'}
          Look on
      %h4
        %i.fa.fa-check-square
        Sweet TODO list

    .card-body
      %h5 Log in
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .col-form-label
          = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'e-mail'
        .col-form-label
          = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password'
        .col-form-label
          = f.check_box :remember_me 
          = f.label :remember_me 
        = f.submit "Log in", class: 'btn btn-secondary'

      = render "devise/shared/links"
